                            <div data-th="Lösung (Typ)">
                                <span class="rwd-table-t"><%- value.icon %>
                                    <%= value.name %> (<%= value.type%>)</span>
                                <br>
                                <p>
                                    <%- value.note %>
                                </p>
                            </div>
                            <div>
                                <div class="badges">
                                    <% for (let b in value["no-issues"]) { %>
